<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:backgroundTint="@color/yellow"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="8dp">

            <TextView
                android:id="@+id/ltite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/purple_500"
                android:textStyle="bold"
                android:text="Hello From title one "
                android:textSize="20sp" />

            <TextView
                android:id="@+id/ldescri"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" sdf  sadf  as fd sa df  sdf s df s dfas df  sadf  sadf  sdf  sdf s df \nsadf sd f sdf"
                android:textSize="20dp"
                android:layout_below="@id/ltite"/>

            <TextView
                android:id="@+id/ldate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ldescri"
                android:gravity="right"
                android:textStyle="bold|italic"
                android:text="30-7-2021"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
